#:include about_app.kv

<NavContent>:

    ScrollView:
        MDList:
            
            OneLineListItem:
                text: 'Menu'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.management.current = 'first_screen'


            OneLineListItem:
                text: 'Profile'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.management.current = 'profile_screen'
<Layout_>:
    Screen:
        MDNavigationLayout:
            
            ScreenManager:
                id: screen_manager
                FirstScreen:
                    id: first_screen
                    ScreenManager:  
                        id: first_manager
                        AboutAppScreen:
                            id: 'aboutapp_screen'
                    
                    
                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            pos_hint: {'top': 1}
                            id: toolbar
                            title: 'Space Glow'
                            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                            elevation: 5
                        Widget:
                ProfileScreen:
                    id: profile_screen
            MDNavigationDrawer:
                id: nav_drawer
                NavContent:
                    management: screen_manager
                    nav_drawer: nav_drawer
                
<FirstScreen@Screen>:
    name: 'first_screen'
    ScrollView:
        size: self.size
        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            width: self.minimum_width
            cols: 2
            spacing:"20dp"
            padding: [dp(20),dp(100),dp(20),dp(100)]

            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 4
                border_radius: 0
                radius: [15]
                canvas.before:
                    Color:
                        rgba: 255/255.0, 191/255.0, 243/255.0, 0.5
                    RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
                MDLabel:
                    text: 'About                App'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}
                    #on_release:
                        #root.first_manager.current = 'aboutapp_screen'
                    
            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 4
                border_radius: 20
                radius: [15]

            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 4
                border_radius: 20
                radius: [15]
            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 4
                border_radius: 20
                radius: [15]
            
            

