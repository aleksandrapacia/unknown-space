<ProfileScreen>
    name: 'profile_screen'
    BoxLayout:
        orientation: 'vertical'
        MDFloatLayout:
            md_bg_color: (1,1,1,1)
            MDFloatLayout:
                size_hint_x: 1
                size_hint_y: .33
                pos_hint: {'center_x':.5,'center_y':.85}
                canvas:
                    Color:
                        rgb: (232/255,176/255,243/255,0.5)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        #source: 
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgb: (1,1,1,1)
                    Ellipse:
                        pos: [self.width/2-72.5, self.height-300]
                        size: 150 , 150
                        source: 'images/blank_pic.jpg'
                        angle_start: 0
                        angle_end: 360
                MDLabel:
                    text: '@username'
                    halign: 'center'
                    pos:[self.width/2-72.5, self.height-400]
                    font_name: 'WorkSans'
            MDIconButton:
                id: twitter
                icon: 'twitter'
                pos_hint: {'center_x':.3, 'center_y': .42}
            MDIconButton:
                id: youtube
                icon: 'youtube'
                pos_hint: {'center_x':.5, 'center_y': .42}
            MDIconButton:
                id: telegram
                icon: 'telegram'
                pos_hint: {'center_x':.7, 'center_y': .42}

            MDBoxLayout:
                orientation: 'vertical'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .74}
                MDRoundFlatIconButton:
                    text: "Pictures"
                    halign: 'center'
                    font_name: 'WorkSans'
                    pos_hint: {'center_x': .3, 'center_y': 1}
            MDBoxLayout:
                orientation: 'vertical'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .74}
                MDRoundFlatIconButton:
                    text: "Articles"
                    font_name: 'WorkSans'
                    halign: 'center'
                    pos_hint: {'center_x': .7, 'center_y': 1}

            BoxLayout:
                orientation: 'horizontal'
                MDFloatLayout:
                    size_hint_x: .5
                    size_hint_y: .2
                    pos_hint: {'center_x':.5,'center_y':.1}
                    canvas:
                        Color:
                            rgb: (232/255,176/255,243/255,0.5)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDLabel:
                        text: 'Bio'
                        font_name: 'WorkSans'
                        halign: 'center'
                        pos_hint: {'center_x': .5, 'center_y':.9}
