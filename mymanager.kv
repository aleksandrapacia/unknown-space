<Layout_>:
    Screen:
        MDNavigationLayout:
            ScreenManager:
                id: management

                LikeScreen:
                    id: like
                    name: 'like'


                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            pos_hint: {'top': 1}
                            id: toolbar
                            title: ''
                            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                            elevation: 5
                        Widget:
                    ScreenManager:
                        id: check
                        name: 'check'
                        MineScreen:
                            id: mine
                            name: 'mine'
                            BoxLayout:
                                orientation: 'vertical'
                                MDToolbar:
                                    pos_hint: {'top': 1}
                                    id: toolbar
                                    title: ''
                                    left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                                    elevation: 5
                                Widget:
                        TrackScreen:
                            name: 'iss_tracking'
                            BoxLayout:
                                orientation: 'vertical'
                                MDToolbar:
                                    pos_hint: {'top': 1}
                                    id: toolbar
                                    title: ''
                                    left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                                    elevation: 5
                                Widget:
                            

                        ProfileScreen:
                            id: profile
                            BoxLayout:
                                orientation: 'vertical'
                                MDToolbar:
                                    pos_hint: {'top': 1}
                                    id: toolbar
                                    title: ''
                                    left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                                    elevation: 5
                                Widget:


                        AboutScreen:
                            id: aboutapp
                            BoxLayout:
                                orientation: 'vertical'
                                MDToolbar:
                                    pos_hint: {'top': 1}
                                    id: toolbar
                                    title: ''
                                    left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                                    elevation: 5
                                Widget:

                        MoonScreen:
                            id: moon
                            name: 'moon'
                        # PROFILE CONTENT
                        SettingsScreen:
                            id: settings
                            name: 'settings'
                        ArticlesScreen:
                            id: articles
                            name: 'articles'
                        PicturesScreen:
                            id: pictures
                            name: 'pictures'

            MDNavigationDrawer:
                id: nav_drawer
                ContentNavigationDrawer:
                    management: management
                    nav_drawer: nav_drawer
                    check: check

<ContentNavigationDrawer>:

    ScrollView:
        MDList:
            
            OneLineListItem:
                text: 'Menu'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.check.current = 'mine'


            OneLineListItem:
                text: 'Profile'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.check.current = 'profile'

<MineScreen>:
    id: mine
    name: 'mine'
    
    ScrollView:
        size: self.size
        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            width: self.minimum_width
            cols: 2
            spacing:"20dp"
            padding: [dp(20),dp(100),dp(20),dp(100)]
            
            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 0
                radius: [15]
                on_release:
                    root.telling_abt()
                    
                canvas.before:
                    Color:
                        rgba: 255/255.0, 191/255.0, 243/255.0, 0.5
                    RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
                MDLabel:
                    text: 'About                App'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}
                    
                    
            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 20
                radius: [15]
                on_release:
                    root.moon_mapping()
                canvas.before:
                    Color:
                        rgba: 206/255.0, 77/255.0, 255/255.0, 0.3
                    RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
                MDLabel:
                    text: 'Moon           Map'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}

            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 20
                radius: [15]
                on_release:
                    root.tracking()

                canvas.before:
                    Color:
                        rgba:  206/255.0, 77/255.0, 255/255.0, 0.3
                    RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
                MDLabel:
                    text:'Track             ISS'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}
                
            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 20
                radius: [15]
                canvas.before:
                    Color:
                        rgba: 255/255.0, 191/255.0, 243/255.0, 0.5
                    RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
                MDLabel:
                    text: 'May                Meteor         Showers'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}

            MDCard:
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 20
                radius: [15]
                canvas.before:
                    Color:
                        rgba: 255/255.0, 191/255.0, 243/255.0, 0.5
                    RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
                MDLabel:
                    text: 'Moon Phase'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}
<AboutScreen>:
    id: aboutapp
    MDLabel:
        text: 'About App'
        halign: 'center'
        font_name: 'WorkSans'
        font_size: 23
        pos_hint: {'center_x':.5,'center_y':.85}   

    MDIconButton:
        icon: "arrow-right"
        pos_hint: {"center_x": .9, "center_y": .85}
        on_press:
            root.come_back_m_n()  

<MoonScreen>:
    id: moon

    MDLabel:
        text: 'Moon Mapping'
        halign: 'center'
        font_name: 'WorkSans'
        font_size: 23
        pos_hint: {'center_x':.5,'center_y':.85}  

    MDLabel:    
        text: 'Scroll with two fingers to see the details'
        halign: 'center'
        font_name: 'WorkSans'
        font_size: 10
        pos_hint: {'center_x':.5,'center_y':.5}  
                    
    MDIconButton:
        icon: "arrow-right"
        halign: 'center'
        pos_hint: {"center_x": .9, "center_y": .85}
        on_release:
            root.menu_get()

    RelativeLayout:
        size_hint: None,None
        size: 100,200
        ScatterWidget:
            id: scatter_widget_id
            SquareWidget:

     




<SquareWidget>:
    size_hint: None,None
    size: 200,200
    canvas:
        Color:
            rgb: [1,1,1]
        Rectangle:
            size: self.size
            pos: self.pos
            source: 'images//moon_map.png'
            
<ProfileScreen>:
    id: profile
    name: 'profile'
    BoxLayout:
        orientation: 'vertical'
        MDFloatLayout:
            md_bg_color: (1,1,1,1)
            MDFloatLayout:
                size_hint_x: 1
                size_hint_y: .33
                pos_hint: {'center_x':.5,'center_y':.85}
                canvas:
                    Color:
                        rgb: (232/255,176/255,243/255,0.5)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        #source: 
                MDIconButton:
                    icon: "settings-helper"
                    pos_hint: {"center_x": .92, "center_y": .55}
                    on_press:
                        root.settings_get()
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgb: (1,1,1,1)
                    Ellipse:
                        pos: [self.width/2-72.5, self.height-300]
                        size: 150 , 150
                        source: 'images/blank_pic.jpg'
                        angle_start: 0
                        angle_end: 360
                MDLabel:
                    text: '@username'
                    halign: 'center'
                    pos:[self.width/2-72.5, self.height-400]
                    font_name: 'WorkSans'
            MDIconButton:
                id: twitter
                icon: 'twitter'
                pos_hint: {'center_x':.3, 'center_y': .42}
            MDIconButton:
                id: youtube
                icon: 'youtube'
                pos_hint: {'center_x':.5, 'center_y': .42}
            MDIconButton:
                id: telegram
                icon: 'telegram'
                pos_hint: {'center_x':.7, 'center_y': .42}

            MDBoxLayout:
                orientation: 'vertical'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .74}
                # PICTURES
                MDRoundFlatIconButton:
                    text: "Pictures"
                    halign: 'center'
                    font_name: 'WorkSans'
                    pos_hint: {'center_x': .3, 'center_y': 1}
                    on_press:
                        root.pictures_get()
            MDBoxLayout:
                orientation: 'vertical'
                halign: 'center'
                pos_hint: {'center_x': .5, 'center_y': .74}
                # ARTICLES
                MDRoundFlatIconButton:
                    text: "Articles"
                    font_name: 'WorkSans'
                    #icon
                    halign: 'center'
                    pos_hint: {'center_x': .7, 'center_y': 1}
                    on_press:
                        root.articles_get()

            BoxLayout:
                orientation: 'horizontal'
                MDFloatLayout:
                    size_hint_x: .5
                    size_hint_y: .2
                    pos_hint: {'center_x':.5,'center_y':.1}
                    canvas:
                        Color:
                            rgb: (232/255,176/255,243/255,0.5)
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    MDLabel:
                        text: 'Bio'
                        font_name: 'WorkSans'
                        halign: 'center'
                        pos_hint: {'center_x': .5, 'center_y':.9}



