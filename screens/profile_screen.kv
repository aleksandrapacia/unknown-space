
<ProfileScreen>
    name: 'profile_screen'
    BoxLayout:
        orientation: 'vertical'
        MDFloatLayout:
            md_bg_color: (1,1,1,1)
            MDFloatLayout:
                size_hint_x: 1
                size_hint_y: .33
                pos_hint: {'center_x':.5,'center_y':.85}
                canvas:
                    Color:
                        rgb: (232/255,176/255,243/255,0.5)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                        #source: 
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgb: (1,1,1,1)
                    Ellipse:
                        pos: [self.width/2-72.5, self.height-300]
                        size: 150 , 150
                        source: 'images/blank_pic.jpg'
                        angle_start: 0
                        angle_end: 360

