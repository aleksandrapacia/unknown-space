                        pos: self.pos
                MDLabel:
                    text:'Track             ISS'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}
                
            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 20
                radius: [15]
                canvas.before:
                    Color:
                        rgba: 255/255.0, 191/255.0, 243/255.0, 0.5
                    RoundedRectangle:
