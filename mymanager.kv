
<NavContent>:

    ScrollView:
        MDList:
            
            OneLineListItem:
                text: 'Menu'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.first_manager.current = 'mine'


            OneLineListItem:
                text: 'Profile'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.management.current = 'profile_screen'

    
    
<Layout_>:
    Screen:
        MDNavigationLayout:
            ScreenManager:
                id: management
                FirstScreen:
                    id: first_screen

                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            pos_hint: {'top': 1}
                            id: toolbar
                            title: 'Space Glow'
                            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                            elevation: 5
                        Widget:


                ProfileScreen:
                    id: profile_screen
                    BoxLayout:
                        orientation: 'vertical'
                        MDToolbar:
                            pos_hint: {'top': 1}
                            id: toolbar
                            title: 'Space Glow'
                            left_action_items: [["menu", lambda x: nav_drawer.set_state('open')]]
                            elevation: 5
                        Widget:
                
            MDNavigationDrawer:
                id: nav_drawer
                NavContent:
                    management: management
                    nav_drawer: nav_drawer
                    first_manager: first_screen.first_manager


