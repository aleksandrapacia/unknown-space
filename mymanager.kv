            MDNavigationDrawer:
                id: nav_drawer
                ContentNavigationDrawer:
                    management: management
                    nav_drawer: nav_drawer
                    check: check

<ContentNavigationDrawer>:

    ScrollView:
        MDList:
            
            OneLineListItem:
                text: 'Menu'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.check.current = 'mine'




<MoonPhaseScreen>:
    name: 'moon_phase'
    id: moon_phase

    MDLabel:
        text: 'Moon Phases'
        halign: 'center'
        font_name: 'WorkSans'
        font_size: 23
        pos_hint: {'center_x':.5,'center_y':.85}

    MDIconButton:
        icon: "arrow-right"
        halign: 'center'
        pos_hint: {"center_x": .9, "center_y": .85}
        on_release:
            root.run_away_phase()


    MDIconButton:
        icon: 'information'
        halign: 'center'
        pos_hint: {"center_x": .1, "center_y": .85}
        on_release:
            root.manager.current = 'phase_info'
<InfoScreen>:
    name: 'phas_info'
    id: phase_info
    ScrollView:
        RelativeLayout:
    
            MDLabel:
                text: 'Info'
                halign: 'center'
                font_name: 'WorkSans'
                font_size: 23
                pos_hint: {'center_x':.5,'center_y':.85}

            MDIconButton:
                icon: "arrow-right"
                halign: 'center'
                pos_hint: {"center_x": .9, "center_y": .85}
                on_release:
                    root.manager.current = 'moon_phase'

                
            RelativeLayout:
                pos_hint: {'center_x':.5, 'center_y': .6}
                Image:
                    source: 'images//phases//to_full//26.png'
                Label:
                    text: 'Full Moon'

                Image:
                    source: 'images//phases//to_full//1.png'
                    pos_hint: {'center_x': .5, 'center_y': .1}
                Label:
                    text: 'New Moon'
                    pos_hint: {'center_x': .5, 'center_y': .1}
                    
                    

                


<MineScreen>:
    id: mine
    name: 'mine'
    
    ScrollView:
        size: self.size
        GridLayout:
            size_hint_y: None
            height: self.minimum_height
            width: self.minimum_width
            cols: 2
            spacing:"20dp"
            padding: [dp(20),dp(100),dp(20),dp(100)]
            
            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 0
                radius: [15]
                on_release:
                    root.telling_abt()
                    
                canvas.before:
                    Color:
                        rgba: 255/255.0, 191/255.0, 243/255.0, 0.5
                    RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
                MDLabel:
                    text: 'About                App'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}
                    
                    
            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 20
                radius: [15]
                on_release:
                    root.moon_mapping()
                canvas.before:
                    Color:
                        rgba: 206/255.0, 77/255.0, 255/255.0, 0.3
                    RoundedRectangle:
                        radius: [10]
                        size: self.size
                        pos: self.pos
                MDLabel:
                    text: 'Moon           Map'
                    font_name: 'WorkSans'
                    font_size: 25
                    halign: 'center'
                    pos_hint: {'center_y': .5}

            MDCard: 
                orientation: 'vertical'
                padding: '8dp'
                size_hint: 1, None 
                height: "210dp"
                elevation: 0
                border_radius: 20
                radius: [15]
                on_release:
                    root.tracking()

                canvas.before:
                    Color:
                        rgba:  206/255.0, 77/255.0, 255/255.0, 0.3
