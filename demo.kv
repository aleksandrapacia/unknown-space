
<NavContent>:
    ScrollView:
        MDList:
            OneLineListItem:
                text: 'go to screen 1'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.manager.current = 'screen_1'


            OneLineListItem:
                text: 'go to screen 2'
                on_release:
                    root.nav_drawer.set_state('close')
                    root.manager.current = 'screen_2'
<Image>:
    allow_stretch: True
    keep_ratio: True
    height: dp(260)
    size_hint_x: .5
    mag_filter: 'nearest'


<Demo>:
    Screen:
        MDToolbar:
            pos_hint: {'top': 1}
            title: 'Space Glow'
            elevation: 8
            left_action_items: [['menu', lambda x: nav_drawer.set_state('open')]]
        MDNavigationDrawer:
            id: nav_drawer
            NavContent:
                manager: screen_manager
                nav_drawer: nav_drawer

        MDNavigationLayout:
            ScreenManager:
                id: screen_manager
                Screen:
                    name: 'screen_1'
                    ScrollView:
                        GridLayout:
                            cols: 3
                            adaptive_height: True
                            padding: dp(4), dp(300)
                            spacing: dp(4)
                            row_default_height: (self.width - self.cols*self.spacing[0]) / self.cols
                            row_force_default: True

                            Image:
                                source: 'milky-way.jpg'
                            Image:
                                source: 'axiom-1-1.png'
                                
                            Image:
                                source: 'moon_crop.jpg'

                Screen:
                    name: 'screen_2'
                    MDLabel:
                        text: 'screen_2'
        
